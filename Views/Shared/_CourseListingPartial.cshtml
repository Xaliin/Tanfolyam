@using Microsoft.AspNetCore.Identity
@using Tanfolyam.Models.Data.Classes
@using Tanfolyam.Models.Data.Interfaces
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager
@model IEnumerable<Course>

@if (SignInManager.IsSignedIn(User))
{
    <section class="maintext">
        <h1>Jelentkezz az alábbi kurzusok közül:</h1>
    </section>
    <section class="info">
        <div>
            <input type="text" class="filter" placeholder="Keresés oktató nevére...">
        </div>
        <div class="balance">
            <p>Hátralevő egyenleged: @ViewBag.UserBudget Ft</p>
        </div>
    </section>
    <section>
        <div>
            <ul class="bg-bubble">
                @foreach (var course in Model)
                {
                    <form asp-action="AddToMyCourse" asp-controller="Course" asp-area="Course">
                        <input type="hidden" name="courseId" asp-for="@course.Id" />
                        <li class="li-bg">
                            <span class="listitem">@course.Name | @course.Type | @course.Teacher.Name | @course.Headcount / @course.Headcount.Maximum | @course.Description | @course.Price | @course.Schedule.ToString() | @course.Status</span>
                            <span><button type="submit" class="li-btn">Felvesz</button></span>
                        </li>
                    </form>
                }
            </ul>
        </div>
    </section>
}
else
{
    <section class="maintext">
        <h1>A kurzusok megtekintéséhez jelentkezz be!</h1>
    </section>
}